# Additional aliases layered on top of oh-my-zsh plugins
alias c='clear'
alias wtf='dmesg | tail -n 25'
alias myip='curl -fsSL https://api.ipify.org?format=json'
alias hz='history | fzf'
alias config='git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
alias v='vim'
alias Z='| fzf'

if command -v bat >/dev/null 2>&1; then
  alias cat='bat --paging=never'
elif command -v ccat >/dev/null 2>&1; then
  alias cat='ccat'
fi

if command -v cpv >/dev/null 2>&1; then
  alias cp='cpv'
else
  alias cp='cp -iv'
fi

if command -v lesspipe >/dev/null 2>&1; then
  export LESSOPEN='| lesspipe %s'
fi
